<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:fitsSystemWindows="true">
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--tools:context="br.unb.unbsolidaria.views.organization.CreateOpportunity" -->

        <RelativeLayout
            android:id="@+id/content_edit_opportunity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="24dp"
            android:paddingLeft="24dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:context="br.unb.unbsolidaria.views.organization.CreateOpportunity"
            tools:showIn="@layout/fragment_create_opportunity"
            android:paddingRight="24dp">

            <!-- Local Label -->
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/co_edit_etAutor"
                android:inputType="textPostalAddress"
                android:layout_alignBaseline="@+id/co_edit_tvAutor"
                android:layout_alignBottom="@+id/co_edit_tvAutor"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/co_edit_tvAutor"
                android:layout_marginStart="4dp"
                android:cursorVisible="false"
                android:editable="false"
                android:hapticFeedbackEnabled="false"
                android:enabled="true" />

            <!-- Vagas Label -->
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/co_edit_etSpots"
                android:layout_alignBaseline="@+id/co_edit_tvSpots"
                android:layout_alignBottom="@+id/co_edit_tvSpots"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/co_edit_tvSpots"
                android:layout_marginStart="4dp"
                android:cursorVisible="false"
                android:editable="false"
                android:hapticFeedbackEnabled="false"
                android:enabled="true"
                android:inputType="number" />

            <!-- Title Titulo -->
            <TextView
                android:text="Título:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/co_edit_tvTitle"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="15dp"
                android:layout_alignStart="@+id/co_edit_etDescription" />

            <!-- Button -->

            <!-- Title Data Termino -->

            <!-- Title Data Inicio -->
            <TextView
                android:text="Data de Início:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/co_edit_tvDateStart"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginTop="23dp"
                android:layout_alignStart="@+id/co_edit_tvTitle"
                android:layout_alignEnd="@+id/co_edit_tvDateEnd"
                android:layout_below="@+id/co_edit_tvSpots" />

            <!-- Data Inicio Label -->

            <!-- Data Termino Label -->

            <!-- Titulo Label -->
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/co_edit_etTitle"
                android:inputType="textEmailSubject"
                android:layout_alignBaseline="@+id/co_edit_tvTitle"
                android:layout_alignBottom="@+id/co_edit_tvTitle"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/co_edit_tvTitle"
                android:layout_marginStart="4dp"
                android:capitalize="sentences" />

            <!-- Email Label -->

            <!-- Title Email -->

            <!-- Descricao Label -->

            <!-- Title Descricao -->

            <!-- Title Local -->
            <TextView
                android:text="Autor:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/co_edit_etTitle"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_alignParentStart="true"
                android:id="@+id/co_edit_tvAutor"
                android:layout_alignEnd="@+id/co_edit_tvDateEnd"
                android:layout_alignStart="@+id/co_edit_tvTitle"
                android:layout_marginTop="20dp" />

            <!-- Title Vagas -->
            <TextView
                android:text="Vagas:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/co_edit_tvAutor"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_alignParentStart="true"
                android:id="@+id/co_edit_tvSpots"
                android:layout_alignEnd="@+id/co_edit_tvDateEnd"
                android:layout_alignStart="@+id/co_edit_tvTitle"
                android:layout_marginTop="22dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/co_edit_etDateStart"
                android:inputType=""
                android:cursorVisible="false"
                android:hapticFeedbackEnabled="false"
                android:enabled="true"
                android:layout_alignBaseline="@+id/co_edit_tvDateStart"
                android:layout_alignBottom="@+id/co_edit_tvDateStart"
                android:layout_alignStart="@+id/co_edit_etSpots" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/co_edit_etDateEnd"
                android:inputType=""
                android:layout_marginLeft="4dp"
                android:layout_below="@+id/co_edit_etDateStart"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/co_edit_etDateStart" />

            <TextView
                android:text="Data de Término:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/co_edit_tvDateEnd"
                android:textAppearance="?android:attr/textAppearanceMedium"
                tools:layout_constraintTop_creator="1"
                android:layout_alignBaseline="@+id/co_edit_etDateEnd"
                android:layout_alignBottom="@+id/co_edit_etDateEnd"
                android:layout_alignParentStart="true" />

            <Button
                android:text="Enviar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/co_edit_btSend"
                android:layout_marginLeft="153dp"
                android:layout_marginTop="42dp"
                android:layout_below="@+id/co_edit_etDescription"
                android:layout_centerHorizontal="true" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/co_edit_etDescription"
                android:layout_marginTop="38dp"
                android:layout_below="@+id/co_edit_tvDescription"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/co_edit_tvDescription"
                android:text="Descrição"
                android:layout_marginTop="22dp"
                android:layout_below="@+id/co_edit_tvEmail"
                android:layout_toEndOf="@+id/co_edit_tvDateEnd" />

            <TextView
                android:id="@+id/co_edit_tvEmail"
                android:text="Email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/co_edit_etDateEnd"
                android:layout_alignParentStart="true" />

            <EditText
                android:id="@+id/co_edit_etEmail"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/co_edit_tvEmail"
                android:layout_alignBottom="@+id/co_edit_tvEmail"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/co_edit_etDateStart" />

        </RelativeLayout>

    </FrameLayout>
</ScrollView>